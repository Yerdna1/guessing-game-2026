// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tournament {
  id          String           @id @default(cuid())
  name        String
  description String?
  location    String
  startDate   DateTime
  endDate     DateTime
  status      TournamentStatus @default(UPCOMING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  matches     Match[]
  rankings    Ranking[]
  rules       Rule[]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  country       String?
  passwordHash  String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  guesses       Guess[]
  rankings      Ranking[]
}

model Team {
  id        String   @id @default(cuid())
  code      String   @unique // SVK, SWE, FIN, etc.
  name      String
  flagUrl   String?
  createdAt DateTime @default(now())

  homeMatches Match[] @relation("HomeTeam")
  awayMatches Match[] @relation("AwayTeam")
}

model Match {
  id            String      @id @default(cuid())
  tournamentId  String
  homeTeamId    String
  awayTeamId    String
  scheduledTime DateTime
  venue         String?
  stage         MatchStage  @default(GROUP_STAGE)
  status        MatchStatus @default(SCHEDULED)
  homeScore     Int?
  awayScore     Int?
  isPlayoff     Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  tournament Tournament @relation(fields: [tournamentId], references: [id])
  homeTeam   Team       @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam   Team       @relation("AwayTeam", fields: [awayTeamId], references: [id])
  guesses    Guess[]

  @@index([tournamentId])
  @@index([scheduledTime])
}

model Guess {
  id          String   @id @default(cuid())
  userId      String
  matchId     String
  homeScore   Int
  awayScore   Int
  points      Int      @default(0)
  isCorrect   Boolean  @default(false)
  isWinner    Boolean  @default(false)
  isOneTeam   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  match Match @relation(fields: [matchId], references: [id])

  @@unique([userId, matchId])
  @@index([userId])
  @@index([matchId])
}

model Ranking {
  id               String   @id @default(cuid())
  tournamentId     String
  userId           String
  place            Int?
  totalGuesses     Int      @default(0)
  accurateGuesses  Int      @default(0)
  groupStagePoints Int      @default(0)
  playoffPoints    Int      @default(0)
  totalPoints      Int      @default(0)
  lastCalculated   DateTime @default(now())

  tournament Tournament @relation(fields: [tournamentId], references: [id])
  user       User       @relation(fields: [userId], references: [id])

  @@unique([tournamentId, userId])
  @@index([tournamentId, totalPoints(desc)])
}

model Rule {
  id           String   @id @default(cuid())
  tournamentId String
  title        String
  description  String
  pointsExact  Int      @default(4)
  pointsWinner Int      @default(1)
  pointsOneTeam Int     @default(2)
  playoffBonus Int      @default(1)
  createdAt    DateTime @default(now())

  tournament Tournament @relation(fields: [tournamentId], references: [id])

  @@index([tournamentId])
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Enums
enum TournamentStatus {
  UPCOMING
  ONGOING
  COMPLETED
}

enum UserRole {
  USER
  ADMIN
}

enum MatchStage {
  GROUP_STAGE
  QUARTERFINAL
  SEMIFINAL
  BRONZE_MATCH
  FINAL
}

enum MatchStatus {
  SCHEDULED
  LIVE
  COMPLETED
  CANCELLED
}
